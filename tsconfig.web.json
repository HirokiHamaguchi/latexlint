{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "target": "ES2021",
        "module": "ES2020",
        "moduleResolution": "node",
        "lib": [
            "ES2021",
            "DOM",
            "DOM.Iterable"
        ],
        "outDir": "./out/web",
        "skipLibCheck": true
    },
    "include": [
        "src/web.ts",
        "src/LL/**/*",
        "src/util/**/*"
    ],
    "exclude": [
        "src/extension.ts",
        "src/commands/**/*",
        "src/test/**/*",
        "node_modules"
    ]
}