{
  "name": "latexlint",
  "displayName": "LaTeX Lint",
  "description": "Linter for LaTeX with the commands renaming feature",
  "version": "1.0.2",
  "icon": "images/mainIcon128.png",
  "author": {
    "name": "hari64boli64",
    "email": "hari64boli64@gmail.com"
  },
  "publisher": "hari64boli64",
  "license": "MIT",
  "engines": {
    "vscode": "^1.96.0"
  },
  "keywords": [
    "Markdown",
    "LaTeX",
    "Linter",
    "Rename",
    "Academic Writing"
  ],
  "categories": [
    "Linters",
    "Education"
  ],
  "activationEvents": [
    "onLanguage:latex",
    "onLanguage:markdown"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "category": "LaTeX Lint",
        "command": "latexlint.toggleLinting",
        "title": "toggle LaTeX Linting",
        "icon": {
          "dark": "images/lintIconDark.svg",
          "light": "images/lintIconLight.svg"
        }
      },
      {
        "category": "LaTeX Lint",
        "command": "latexlint.diagnose",
        "title": "Get Diagnostics by LaTeX Lint"
      },
      {
        "category": "LaTeX Lint",
        "command": "latexlint.hide",
        "title": "Hide Diagnostics by LaTeX Lint"
      },
      {
        "category": "LaTeX Lint",
        "command": "latexlint.addRule",
        "title": "Add Rule for LaTeX Lint"
      },
      {
        "category": "LaTeX Lint",
        "command": "latexlint.renameCommand",
        "title": "Rename Command for \\begin{} or \\end{}"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "editorLangId == latex || editorLangId == markdown",
          "command": "latexlint.toggleLinting",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "latexlint.renameCommand",
        "key": "f2",
        "when": "editorLangId == latex || editorLangId == markdown"
      }
    ],
    "configuration": {
      "title": "LaTeX Lint",
      "properties": {
        "latexlint.userDefinedRules": {
          "type": "array",
          "default": [],
          "description": "User defined Regex rules for LaTeX Lint"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "ts-loader": "^9.5.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hari64boli64/latexlint"
  },
  "bugs": {
    "url": "https://github.com/hari64boli64/latexlint/issues",
    "email": "hari64boli64@gmail.com"
  }
}