{
	"files.exclude": {
		"**/.mypy_cache": true,
		"**/.venv": true,
		"**/.vscode-test": true,
		"**/node_modules": true,
		"out": true,
		"dist": true
	},
	"search.exclude": {
		"out": false, // set this to false to include "out" folder in search results
		"dist": false // set this to false to include "dist" folder in search results
	},
	"editor.codeActionsOnSave": {
		"source.organizeImports": "explicit",
		"source.fixAll.eslint": "explicit"
	},
	// Turn off tsc task auto detection since we have the necessary tasks as npm scripts
	"typescript.tsc.autoDetect": "off",
	"editor.formatOnSave": true,
	"cSpell.words": [
		"'enyi",
		"alignat",
		"amsmath",
		"amsthm",
		"asymp",
		"Berners",
		"biblatex",
		"bibliography",
		"bibtex",
		"chktex",
		"citep",
		"citet",
		"Civita",
		"cleveref",
		"coloneqq",
		"Conv",
		"cref",
		"crefrangeconjunction",
		"csquotes",
		"CTAN",
		"declaretheorem",
		"dotenv",
		"enquote",
		"eqnarray",
		"eqqcolon",
		"eqref",
		"Erdos",
		"Erdős",
		"exbi",
		"fallingdotseq",
		"fancyvrb",
		"fitz",
		"Fruchterman",
		"fullwidth",
		"gibi",
		"giga",
		"hari64boli64",
		"icomma",
		"impliedby",
		"includegraphics",
		"infimal",
		"ipynb",
		"Karush",
		"kibi",
		"latexlint",
		"LLENDash",
		"LLSI",
		"LLURL",
		"lstlisting",
		"mapsto",
		"mathbb",
		"mathrel",
		"mathrm",
		"mathsf",
		"mathtools",
		"mebi",
		"natbib",
		"newcommand",
		"nonstopmode",
		"odot",
		"openintro",
		"oplus",
		"otimes",
		"pbibtex",
		"pdflatex",
		"pebi",
		"peta",
		"Podolsky",
		"preceq",
		"Qiita",
		"R",
		"Reingold",
		"Renyi",
		"Rényi",
		"rightarrow",
		"risingdotseq",
		"Rosen",
		"sessionid",
		"siunitx",
		"sqcup",
		"subsubsection",
		"succeq",
		"tebi",
		"tera",
		"thmtools",
		"tikzpicture",
		"uplus",
		"usepackage",
		"vscodeignore",
		"WORDVICE",
		"yobi",
		"yotta",
		"zebi",
		"zetta"
	],
	"latex-workshop.latex.recipes": [
		{
			"name": "pdflatex*2",
			"tools": [
				"pdflatex",
				"pdflatex"
			]
		},
	],
	"latex-workshop.latex.tools": [
		{
			"args": [
				"-interaction=nonstopmode",
				"-synctex=1",
				"-file-line-error",
				"--shell-escape",
				"%DOC%"
			],
			"command": "pdflatex",
			"name": "pdflatex"
		},
	],
	"latexlint.userDefinedRules": [
		"f\\^a"
	],
	"[typescript]": {
		"editor.defaultFormatter": "vscode.typescript-language-features"
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "vscode.typescript-language-features"
	},
	"[latex]": {
		"editor.insertSpaces": false,
		"editor.detectIndentation": false
	},
	"[tex]": {
		"editor.insertSpaces": false,
		"editor.detectIndentation": false
	}
}
